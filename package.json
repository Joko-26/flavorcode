{
  "name": "flavorcode",
  "displayName": "Flavorcode",
  "description": "Manage your Flavortown journey straight from VS-Code with this VS-Code extension made for flavortown. ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:flavorcode.infoView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flavorcode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flavorcode.setupProject",
        "title": "Setup Flavorcode",
        "category": "Flavorcode"
      },
      {
        "command": "flavorcode.createProject",
        "category": "Flavorcode",
        "title": "create new Project"
      },
      {
        "command": "flavorcode.updateProject",
        "category": "Flavorcode",
        "title": "update current Project"
      },
      {
        "command": "flavorcode.openDevlog",
        "category": "flavorcode",
        "title": "Open devlog"
      },
      {
        "command": "flavorcode.theme",
        "category": "flavorcode",
        "title": "set Flavorcode theme"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectInfo",
          "title": "Flavorcode",
          "icon": "resources/image.png"
        }
      ]
    },
    "views": {
      "projectInfo": [
        {
          "id": "flavorcode.infoView",
          "name": "Flavortown project",
          "type": "webview"
        },
        {
          "id": "flavorcode.devlogView",
          "name": "Devlogs",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "flavorcode.infoView",
        "contents": "Hmm seems Flavorcode isnt setup yet \n In order to use Flavorcode run the setup command: \n [setup](command:flavorcode.setupProject) \n Visit the [flavortown website](https://flavortown.hackclub.com/kitchen)"
      }
    ],
    "configuration": {
      "title": "Flavorcode",
      "properties": {
        "flavorcode.flavortownApiKey": {
          "type": "string",
          "default": "none",
          "description": "Set your flavortown api key to use this extension.)",
          "scope": "application"
        },
        "flavorcode.hackatimeApiKey": {
          "type": "string",
          "default": "none",
          "description": "not needed rn, maybe in the future",
          "scope": "application"
        },
        "flavorcode.userId": {
          "type": "string",
          "default": "",
          "description": "Your Flavortown user Id used to get user info and projects.",
          "scope": "application"
        },
        "flavorcode.projectId": {
          "type": "string",
          "default": " ",
          "description": "Your Flavortown project id"
        },
        "flavorcode.useDiscord": {
          "type": "boolean",
          "default": "true",
          "description": "Connect to discord rich Presence",
          "scope": "application"
        },
        "flavorcode.theme": {
          "type":"string",
          "default":" ",
          "description": "Set the theme of Flavorcode!",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/discord-rpc": "^4.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "discord-rpc": "^4.0.1",
    "emoji": "^0.3.2",
    "node-emoji": "^2.2.0"
  }
}
