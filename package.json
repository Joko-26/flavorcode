{
  "name": "flavorcode",
  "displayName": "Flavorcode",
  "description": "Manage your Flavortown journey straight from VS-Code with this VS-Code extension made for flavortown. ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flavorcode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flavorcode.setupProject",
        "title": "Setup Flavorcode",
        "category": "Flavorcode"
        
      },
      {
        "command": "flavorcode.createProject",
        "category": "Flavorcode",
        "title": "create new Project"
      },
      {
        "command": "flavorcode.updateProject",
        "category": "Flavorcode",
        "title": "update current Project"
      },
      {
        "command": "flavorcode.deletCurrentProject",
        "category": "Flavorcode",
        "title": "delet current Project"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "projectInfo",
          "title": "Flavorcode",
          "icon": "resources/image.png"
        }
      ]
    },
    "views": {
      "projectInfo": [
        {
          "id": "flavorcode.infoView",
          "name": "Flavortown project"
        },
        {
          "id": "flavorcode.devlogView",
          "name": "Devlogs"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "flavorcode.infoView",
        "contents": "Hmm seems Flavorcode isnt setup yet \n In order to use Flavorcode run the setup command: \n [setup](command:flavorcode.setupProject) \n Visit the [flavortown website](https://flavortown.hackclub.com/kitchen)"
      }
    ],
    "configuration": {
      "title": "Flavorcode",
      "properties": {
        "flavorcode.flavortownApiKey": {
          "type": "string",
          "default": "none",
          "description": "Set your flavortown api key to use this extension. (no worries its just saved locally ;) )",
          "scope": "application"
        },
        "flavorcode.hackatimeApiKey": {
          "type": "string",
          "default": "none",
          "description": "not needed rn, maybe in the future",
          "scope": "application"
        },
        "flavorcode.userName": {
          "type": "string",
          "default": "your username",
          "description": "Your Flavortown username used to get user info and projects.",
          "scope": "application"
        },
        "flavorcode.projectId": {
          "type": "number",
          "default": "0",
          "description": "Your Flavortown project id"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
