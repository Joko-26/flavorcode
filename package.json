{
  "name": "flavorcode",
  "displayName": "Flavorcode",
  "description": "Manage your Flavortown journey straight from VS-Code with this VS-Code extension made for flavortown. ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:flavorcode.helloWorld",
    "onView:project-selection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flavorcode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "flavorcode.setupProject",
        "title": "Setup Flavorcode"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id":"project-selection",
          "title": "Flavorcode",
          "icon": "resources/test-logo.png"
        }
      ]
    },
    "views": {
      "project-selection":[
        {
          "id": "project",
          "name": "Current project"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "project",
        "contents": "test Flavorcode"
      }
    ],
    "configuration":{
      "title": "Flavorcode",
      "properties": {
        "flavorcode.flavortownApiKey": {
          "type": "string",
          "default": "none",
          "description": "Set your flavortown api key to use this extension. (no worries its just saved locally ;) )"
        },
        "flavorcode.hackatimeApiKey" : {
          "type": "string",
          "default": "none",
          "description": "not needed rn, maybe in the future"
        },
        "flavorcode.userName" : {
          "type":"string",
          "default":"your username",
          "description": "Your Flavortown username used to get user info and projects."
        }
      }
    }
  },


  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
